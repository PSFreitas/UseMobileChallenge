<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_person_photo_detail"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginTop="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView_person_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:fontFamily="@font/roboto"
            android:textColor="@android:color/black"
            android:textSize="29sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_person_photo_detail"
            tools:text="Rafael Braga Araujo" />

        <TextView
            android:id="@+id/textView_person_email_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/textView_person_name_detail"
            app:layout_constraintStart_toStartOf="@id/textView_person_name_detail"
            app:layout_constraintTop_toBottomOf="@id/textView_person_name_detail"
            tools:text="rafeal@gmail.com" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_content_person_about"
            android:layout_width="328dp"
            android:layout_height="127dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rect_border"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_person_email_detail">

            <TextView
                android:id="@+id/textView_person_about_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/lorem_person_about" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>