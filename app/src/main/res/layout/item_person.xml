<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="person"
            type="com.data.network.entities.PersonItemListNetworkEntity" />

    <import type="android.view.View"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_person_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15.5dp"
            android:layout_marginTop="13dp"
            loadImage="@{person.photo}"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:lines="1"
            android:text="@{person.name}"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/imageView_person_is_verified"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/imageView_person_picture"
            app:layout_constraintTop_toTopOf="@id/imageView_person_picture"
            tools:text="Amanda Campos" />

        <ImageView
            android:id="@+id/imageView_person_is_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:visibility="@{person.verified == true ? View.VISIBLE : View.GONE}"
            android:src="@drawable/ic_check"
            app:layout_constraintBottom_toBottomOf="@id/textView_person_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textView_person_name"
            app:layout_constraintTop_toTopOf="@id/textView_person_name" />

        <TextView
            android:id="@+id/textView_person_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@{person.email}"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/textView_person_name"
            app:layout_constraintTop_toBottomOf="@id/textView_person_name"
            tools:text="amanda@gmail.com" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>